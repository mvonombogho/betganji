// Add to existing schema

model ModelTraining {
  id            String   @id @default(cuid())
  completedAt   DateTime
  accuracy      Float
  matchesUsed   Int
  error         String?  // Optional error message if training failed
  metadata      Json?    // Additional training metadata
  createdAt     DateTime @default(now())
}

model ModelPrediction {
  id            String   @id @default(cuid())
  match         Match    @relation(fields: [matchId], references: [id])
  matchId       String
  predictedResult String
  confidence    Float
  actualResult  String?
  wasCorrect    Boolean?
  modelVersion  String   // To track which model version made the prediction
  createdAt     DateTime @default(now())
  
  @@index([matchId])
}
