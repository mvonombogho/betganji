// Additional models for bet tracking
model MultiBet {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  selections  BetSelection[]
  totalOdds   Float
  stake       Float
  potentialWin Float
  status      String      // pending, won, lost, partially_won
  settledAt   DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model BetSelection {
  id          String    @id @default(cuid())
  multiBetId  String?
  multiBet    MultiBet? @relation(fields: [multiBetId], references: [id])
  matchId     String
  selection   String
  odds        Float
  status      String
  result      String?
  settledAt   DateTime?
}